{
  "name": "youtube-downloader",
  "version": "1.0.0",
  "description": "A simple audio and video downloader for Youtube without any viruses.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "Tim Baechle",
  "license": "ISC",
  "devDependencies": {
    "electron": "^10.1.6",
